<div class="container">
  <main class="mb-5">
    <div class="">
    <div class="row g-3">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="text-muted"></h4>
        </h4>
        <img src="{{product.image}}" style="max-width: 500px;" class="deatilImage border border-3 shadow rounded p-2" alt="image" >
        
      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3  text-center">{{product.name}}</h4>
        <div>
            <h5>About this product</h5>
            <table class="table table-striped table-sm">
          <tbody>
            <tr>
              <td><b>Quality</b></td>
              <td><p>{{product.quality}}</p></td>
            </tr>
            <tr>
              <td><b>Description</b></td>
              <td><p>{{product.description}}</p></td>
            </tr>
            <tr>
              <td><b>Price</b></td>
              <td><strike>$ 1000.00</strike> <b class="price">{{product.price}}</b></td>
            </tr>
            <tr>
              <td><b>Category</b></td>
              <td><p>{{product.category}}</p></td>
            </tr>
            <tr>
              <td><b>Address</b></td>
              <td><p>{{product.address}}</p></td>
            </tr>
            <tr>
              <td><b>To contact</b></td>
              <td><p>{{product.tel}}</p></td>
            </tr>
          </tbody>
        </table>
        <form action="/card/add" method="POST">
            <input type="hidden" name="id" value="{{product.id}}">
            <button type="submit" class="btn btn-primary">Buy <span class="price">{{product.price}}</span></button>
        </form>
        <hr class="m-5">
        <h5 class="mt-0">About Author</h5>
            <table class="table table-striped table-sm">
          <tbody>
            <tr>
              <td><b>First Name</b></td>
              <td><p></p></td>
            </tr>
            <tr>
              <td><b>Last Name</b></td>
              <td><p></p></td>
            </tr>
            <tr>
              <td><b>Email</b></td>
              <td><p></p></td>
            </tr>
          </tbody>
        </table>
            {{!-- <p><b>Description:</b> {{product.description}}</p>
            <p><b>Price:</b> <strike>$ 100.00</strike> <b>$ {{product.price}}.00</b> </p>   --}}
        </div>
      </div>
    </div>
  </main>
</div>

