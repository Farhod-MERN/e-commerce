<div class="row g-0 mx-md-5 mx-lg-5">
  <div class="col-5 col-sm-6 col-md-8  mx-auto">
    <div class="btn-group">
      <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown"
        aria-expanded="false">
        Choose Category
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/products">All</a></li>
        <li><a class="dropdown-item" href="/products/laptop">Laptop</a></li>
        <li><a class="dropdown-item" href="/products/phone">Phone</a></li>
        <li><a class="dropdown-item" href="/products/equipment">Equipment</a></li>
        <li>
          <hr class="dropdown-divider" />
        </li>
        <li><a class="dropdown-item" href="/products/other">Other</a></li>
      </ul>
    </div>
  </div>
  <div class="col-6 col-md-4">
    <div class="input-group w-100">
      <input class="form-control border-end-0 border-primary rounded-pill" type="search" value=""
        placeholder="Search by name..." id="example-search-input">
      <span class="input-group-append">
        <button class="btn btn-outline-primary border-bottom-0 border rounded-pill ms-n5" type="button">
          <i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </div>
</div>
{{#if products.length}}
<div class="productWrapper my-3 px-md-5 px-lg-5 px-3">

  {{#each products}}
  <div class="card p-2">
    <img src={{image}} style="height: 18rem;" class="card-img-top border border-2 p-3 rounded myCover" alt="image" />
    <div class="card-body py-1">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">{{description}}</p>
    </div>
    <div class="card-body py-2">
      <a href="/products/{{_id}}" class="card-link text-decoration-none">Read more</a>
      {{#ifeq userId._id @root.userId}}
      {{#if @root.isAuth}}
      <a href="/products/{{_id}}/edit?allow=true" class="card-link text-decoration-none">Edit</a>
      {{else}}
      <a href="/auth/login" class="card-link">Edit</a>
      {{/if}}
      {{/ifeq}}
    </div>
    <ul class="list-group list-group-flush mb-1">
      {{!-- <li class="list-group-item"><i class="price">{{price}}</i></li> --}}
      {{! <li class="list-group-item">A second item</li>
      <li class="list-group-item">A third item</li> }}
    </ul>
    {{#if @root.isAuth}}
    <form action="/card/add" method="POST">
      <input type="hidden" name="id" value="{{_id}}" />
      <button type="submit" class="btn btn-primary btn-sm mb-1"><span class="price">{{price}}</span></button>
    </form>
    {{else}}
    <form action="/card/add" method="POST">
      <input type="hidden" name="id" value="{{_id}}" />
      <button disabled="true" type="submit" class="btn btn-primary btn-sm mb-1"><span
          class="price">{{price}}</span></button>
    </form>
    {{/if}}

  </div>

  <div class="myCard">
    <div class="icon">
      {{! <span>11</span> }}
      <a href="/card" class="text-decoration-none">
        <img src="/img/basket.png" alt="" />
      </a>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="w-80 mx-auto mt-5 text-center myAddForm">
  <div class="text-center">
    <div class="container-fluid mt-100">
      <div class="row">
        <div class="col-md-12">
          <div class="card mt-md-5 mt-lg-5">
            <div class="card-body cart">
              <div class="col-sm-12 empty-cart-cls text-center">
                <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3" />
                <h3><strong>There aren't any product</strong></h3>
                <h4>Add something to make me happy :)</h4>
                <a href="/add" class="btn btn-primary cart-btn-transform m-3" data-abc="true">Add something</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}

