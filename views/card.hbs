{{#if products.length}}
  <div class="myBasket">
    <div>
      <h4 class="text-center my-3">Your Basket</h4>
    </div>
    <div>
      <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
          <tr>
            <th>Name</th>
            <th>Count</th>
            <th>1 Price</th>
            <th>Inc</th>
            <th>Dec</th>
          </tr>
        </thead>
        {{#each products}}
        <tbody>
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <img
                  src="{{image}}"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded"
                />
                <div class="ms-3">
                  <p class="fw-bold mb-1"><a href="/products/{{id}}" class="text-decoration-none"/>{{name}}</a></p>
                </div>
              </div>
            </td>
            <td>
              <p class="fw-normal mb-1">{{count}}</p>
            </td>
            <td>
              <p class="fw-normal mb-1">{{price}}</p>
            </td>
            <td>
                <button type="button" class="btn btn-link btn-sm btn-rounded text-decoration-none">
                +
              </button> 
            </td>
            <td><button type="button" data-id="{{id}}" class="js-remove btn btn-link btn-sm btn-rounded text-decoration-none">
                -
              </button>
            </td>
          </tr>
        </tbody>
        {{/each}}
      </table>
      <p class="my-2"><b>Price All:</b> <span class="price">{{price}}</span></p>
    </div>
  </div>
{{else}}
  <div class="myBasket text-center">
    <h4>Basket is empty üòî</h4>
    <small>Buy something to make me Happy üòÅ</small>
    <a href=/products">Go Products</a>
  </div>
{{/if}}